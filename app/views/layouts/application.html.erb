		<a href="#">Nav4</a>
		<a href="#">Nav5</a>
		<a href="#">Nav6</a>
		<% if user_logged_in? %>
		<a href="<%= logout_path %>">Log Out</a>
		<% end %>
		<% if business_logged_in? %>
		<a href="<%= logout_path %>">Log Out</a>
		<% end %>
