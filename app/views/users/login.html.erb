<p class='login-error'><%= flash[:error] %></p>

<%= form_tag('/users/find') %>
<div>
	<%= text_field_tag 'email', nil, :placeholder => "Email", :required => true %>
</div>
<div>
	<%= password_field_tag 'password', nil, :placeholder => "Password", :required => true %>
</div>
<div>
	<%= hidden_field_tag 'latitude', nil, :placeholder => "Latitude", :class => 'latitude' %>
</div>
<div>
	<%= hidden_field_tag 'longitude', nil, :placeholder => "Longitude", :class => 'longitude' %>
</div>
<div>
	<%= submit_tag "Log In" %>
</div>